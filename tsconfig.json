{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "target": "esnext",
    "module": "Node16",
    "lib": ["esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "jsx": "react-native",
    "moduleResolution": "node16",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "baseUrl": ".",
    "paths": {
        "@/*": ["*"]
    },
    "allowImportingTsExtensions": true // Add this line
  },
  "include": [
    "src/**/*",
    "app/**/*",
    "components/**/*",
    "constants/**/*",
    "hooks/**/*",
    ".expo/types/**/*.ts",
    "expo-env.d.ts"
  ]
}